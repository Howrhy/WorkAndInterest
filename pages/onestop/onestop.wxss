/**index.wxss**/
.page {
  display: flex;
  flex-direction: column;
  color: #A91219;
  font-style: normal;
  height: 80%;
  font-weight: 700;
  font-size: 32rpx;
  font-family: ‘Trebuchet MS’, ‘Lucida Sans Unicode’, ‘Lucida Grande’, ‘Lucida Sans’, Arial, sans-serif;
}

.page .title {
  margin-top: 48%;
  align-items: center;
  display: flex;
  margin-left: 15%;
}

.page .content {
  margin-top: 12%;
  width: 76%;
  height: 80%;
  display: flex;
  margin-left: 12%;
  margin-right: 12%;
  justify-content: center;
  align-items: center;
}

.page .choice {
  margin-top: 5%;
  width: 80%;
  margin-left: 12%;
  margin-right: 12%;
  height: 100%;
  display: flex;
}

.page .next {
  margin-top: 6%;
  width: fit-content;
  height: fit-content;
  display: flex;
  position: relative;
  justify-content: center;
  text-align: center;
}

.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 1.4;
  opacity: 0.65;
}

.weather-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
}

.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.selfbutton {
  display: flex;
  justify-content: space-between;
}

.btn1 {
  width: 180rpx;
  margin-top: 20rpx;
  background-color: orange;
  color: white;
  border-radius: 98rpx;
}


.btn1::after {
  border-radius: 98rpx;
}

.btn2 {
  width: 180rpx;
  margin-top: 20rpx;
  background-color: #A91219;
  color: black;
  border-radius: 98rpx;
}

.btn2::after {
  border-radius: 98rpx;
}

.row {
  display: flex;
