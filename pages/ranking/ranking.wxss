/**index.wxss**/
page {
  background: #ffffff;
  /* background: -webkit-gradient(linear, left top, left bottom, from(#4f76e4), to(#24b0e8) ); */
  color: #2c2c2c;
}

.list-title {
  padding: 10px;
  display: flex;
  justify-content: space-between;

}

button {
  color: #fff;
  background: -webkit-gradient(linear, left top, left bottom, from(#fb7299), to(#E84B6E));
}

.score {
  color: #ff7473;
  position: absolute;
  margin-right: 10px;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100px;
  background: #598ce4;
}

.rg {
  float: right;
}

.lf {
  float: left;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  /* margin: 20rpx; */
  border-radius: 50%;
  margin-left: 16px;
}

.userinfo-nickname {
  margin-left: 20px;
  color: white;
  align-items: center;
}

.usermotto {
  margin-top: 0px;
}

.banner {
  width: 100%;
}

.banner image {
  width: 100%;
}

.items {
  display: flex;
  width: 100%;
  min-height: 100rpx;
  justify-content: flex-start;
  flex-direction: column;
  padding: 10rpx;
  margin-top: 5px;
}

.items .item {
  flex-grow: 1;
  padding: 5rpx 20rpx;
  height: 66rpx;
  border-bottom: 1px solid #e6e6e6;
  margin-bottom: 30rpx;
}

.items .itemsclass {
  border-bottom: 20rpx solid #eee;
  padding: 5rpx 20rpx 10rpx 20rpx;
}

.items .item .iconbox {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.items .item .iconbox text {
  padding-left: 10rpx;
  position: relative;
}

.items .item navigator {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.items .item image {
  width: 50rpx;
  height: 50rpx;
}

page {
  width: 100%;
  height: 100%;
}

.temp {
  text-align: center;
  font-size: 200rpx;
  line-height: 1.4;
  opacity: 0.8;
}

.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 1.4;
  opacity: 0.65;
}

.weather-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
}

.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}