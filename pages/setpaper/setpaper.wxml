<!--index.wxml-->
<view style='text-align: center;margin-top: 50%' wx:if='{{!state}}'>
  <image style='width:60rpx;height:60rpx;display:block;margin: 0 auto' src='../../images/icon/load.gif'></image>
  <text>加载中...</text>
</view>
<view wx:if='{{state}}' class='container'>
  <view class='clean'>
    <textarea bindinput='oninputtitle' class='titleinp' bindblur="bindTextAreaBlur" placeholder="试卷标题" />
    <picker class='selectclass' mode="multiSelector" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
    <view class="picker">
      选择分类：{{multiArray[0][multiIndex[0]]}}  {{multiArray[1][multiIndex[1]]}}
    </view>
  </picker>
  <view class='selectovert'>
    <text>是否公开</text>
    <switch wx-if='{{overt}}' checked bindchange="switch1Change"/>
    <switch wx-if='{{!overt}}' bindchange="switch1Change"/>
  </view>
  </view>
  <view class='tips lf'>
   <view>已加入的题目：{{options.length}}</view>
    <view>请从我的题目或收藏的题目中选择加入到试卷</view>
  </view>
  <view class='options'>
     <view class='title' bindtap='onhidden'>
       <text>我的题目</text>
       <image style='transform:{{rotate}}' src='../../images/icon/r.png'></image>
     </view>
     <view class='subjectbox'>
      <scroll-view 
    scroll-y 
    style="height: {{h}};transition: all 0.5s;"
    bindscrolltolower="lower" 
    bindscroll="scroll"
    scroll-into-view="{{toView}}" 
    scroll-top="{{scrollTop}}"
    bindscrolltolower="tolower"
    bindscroll="over">
    <view class='items'>
      <view class='item' wx:for="{{tolicarr}}" wx:key='index'>
          <view class='iconbox'>
            <text class='content'>{{item.title}}</text>
          </view>
          <view class='operation'>
            <button hidden ='{{item.add}}' bindtap='onadd' id='{{item._id}}'>加入</button>
            <button hidden ='{{!item.add}}' bindtap='onremove' id='{{item._id}}'>移除</button>
            <button bindtap='onsee' id='{{index}}'>详情</button>
          </view>
      </view>
  </view> 
    <view class='tips1' wx:if='{{!tolicarr.length}}'>您暂时还没有自定义任何题目</view>
  </scroll-view>
     </view>
     <view class='title' bindtap='onhidden2'>
       <text>我收藏的题目</text>
       <image style='transform:{{rotate2}};' src='../../images/icon/r.png'></image>
     </view>
     <view class='paperbox'>
          <scroll-view 
    scroll-y 
    style="height: {{h2}};transition: all 0.5s;"
    bindscrolltolower="lower" 
    bindscroll="scroll"
    scroll-into-view="{{toView}}" 
    scroll-top="{{scrollTop}}"
    bindscrolltolower="tolower2"
    bindscroll="over">
    <view class='items'>
      <view class='item' wx:for="{{tolicarr2}}" wx:key='index'>
          <view class='iconbox'>
            <text class='content'>{{item.title}}</text>
          </view>
          <view class='operation'>
            <button hidden ='{{item.add}}' bindtap='onadd2' id='{{item._id}}'>加入</button>
            <button hidden ='{{!item.add}}' bindtap='onremove2' id='{{item._id}}'>移除</button>
            <button bindtap='onsee' id='{{index}}'>详情</button>
          </view>
      </view>
  </view> 
    <view class='tips1' wx:if='{{!tolicarr2.length}}'>您暂时还没有收藏任何题目</view>
  </scroll-view>
     </view>
  </view>
   <button bindtap='onsubmiss' class='submission'>提交</button>
</view>
