/**index.wxss**/
.clean:after{
  display: block;
  width: 0;
  height: 0;
  clear: both;
  content:"";
}
.container{
  width: 90%;
  margin: 0 auto;
  font-size: 30rpx;
  height: 100%;
  padding-top: 30rpx;
}
.container view{
  margin-left: 0rpx;
}
.titleinp{
  border: 1rpx solid #DEDEDE;
  border-radius: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}
.selectclass{
  float: left;
  padding-top:10rpx;
}

.selectovert{
  float: right;
}
.selectovert text{
  padding-right: 10rpx;
}
.tips{
  text-align: left;
  width: 100%;
  margin-top: 20rpx;
}
.tips view{
  margin-bottom: 20rpx;
}
.options{
  width: 100%;
}
.options .title{
  padding: 20rpx 0rpx;
  margin-top: 20rpx;
  color: #fff;
  background: #fb7299;
  background: -webkit-gradient(linear, left top, left bottom, from(#fb7299), to(#E84B6E) );
  display: flex;
  align-items: center;
}
.options .title text{
  margin-left: 20rpx;
}

.options .title image{
  width: 50rpx;
  height: 50rpx;
  transition: all 0.5s;
  margin-left: 20rpx;
}
.options view{
  width: 100%;
}


.items{
  display: flex;
  width: 100%;
  min-height: 100rpx;
  justify-content: flex-start;
  flex-direction:column;
}

.items .item{
  flex-grow:1;
  color: #000;
  padding: 5rpx 30rpx 10rpx 20rpx;
  border-bottom: 1px solid #e6e6e6;
  margin-bottom: 30rpx;
}
.items .item .iconbox{
  display: flex;
  flex-direction:row;
  align-items:center ;
  width:180%;
}
.items .item .iconbox text{
  padding-left: 10rpx;
  font-size: 30rpx;
}
.items .item{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:flex-end;
}
.items .item .operation{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  margin-right: 40rpx;
}
.items .item .operation button{
  padding: 0rpx 18rpx;
  text-align: center;
  font-size: 28rpx;
  margin-right: 20rpx;
  height: 70rpx;
}

.submission{
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  color: #fff;
  background: #fb7299;
  background: -webkit-gradient(linear, left top, left bottom, from(#fb7299), to(#E84B6E) );
}

.tips1{
  text-align: center;
  color: #e6e6e6;
  font-size: 36rpx;
}
