/**index.wxss**/
.page {
  display: flex;
  flex-direction: column;
  color: #ffffff;
  font-style: normal;
  height: 100%;
  font-weight: 700;
  font-size: 36rpx;
  font-family: ‘Trebuchet MS’, ‘Lucida Sans Unicode’, ‘Lucida Grande’, ‘Lucida Sans’, Arial, sans-serif;
}

.page .title {
  margin-top: 360rpx;
  width: 100%;
  align-items: center;
  height: auto;
  display: flex;
  justify-content: center;
}


.page .content {
  margin-top: 220rpx;
  width: 76%;
  height: auto;
  display: flex;
  margin-left: 12%;
  margin-right: 12%;
  justify-content: center;
  align-items: center;
}

.page .choice {
  margin-top: 60rpx;
  padding: 4rpx;
  width: 76%;
  margin-left: 12%;
  margin-right: 12%;
  height: auto;
  display: flex;
}

.page .choice_input {
  border-style: solid;
  background-color: #ffffff;
  width: 70%;
  margin-left: 12%;
  height: auto;
  display: flex;
  justify-content: center;
}

.page .next {
  margin-top: 6%;
  width: fit-content;
  height: fit-content;
  display: flex;
  position: relative;
  justify-content: center;
  text-align: center;
}

.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 1.4;
  opacity: 0.65;
}

.weather-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
}

.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.selfbutton {
  display: flex;
  justify-content: space-between;
}

.btn1 {
  width: 180rpx;
  margin-top: 40rpx;
  background-color: orange;
  color: white;
  border-radius: 98rpx;
}


.btn1::after {
  border-radius: 98rpx;
}

.btn2 {
  width: 180rpx;
  margin-top: 20rpx;
  background-color: #A91219;
  color: black;
  border-radius: 98rpx;
}

.btn2::after {
  border-radius: 98rpx;
}

