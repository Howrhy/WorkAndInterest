  border-bottom-right-radius: 100rpx;
   border-bottom-left-radius: 100rpx;
}

.searchbox {
  margin: 20rpx auto;
  display: flex;
  width: 90%;
}

.searchbut{
  width: 20%;
  margin-left: 20rpx;
  font-size: 30rpx;
  background: -webkit-gradient(linear, left top, left bottom, from(#fb7299), to(#E84B6E) );
  color: #fff;
}

.searchbox input{
  border: 1rpx solid #e6e6e6;
  border-radius: 10rpx; 
  margin-top: 10rpx;
  font-size: 28rpx;
  width: 60%;
  height:60rpx;
  padding-left: 20rpx;
}

.selectclass{
  float: left;
  padding-top:30rpx;
