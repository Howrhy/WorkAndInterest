.page {
  height: auto;
  display: flex;
  flex-direction: column;
  color: black;
  font-style: normal;
  font-weight: 700;
  font-size: 14px;
  font-family: ‘Trebuchet MS’, ‘Lucida Sans Unicode’, ‘Lucida Grande’, ‘Lucida Sans’, Arial, sans-serif;
}

.times {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 1.4;
  opacity: 0.65;
}

.weather-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
}

.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.view_tupian_wenzi {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* 圆角 */
  border-radius: 20rpx;
  /* 边 */
  border: 3rpx solid #E0E3DA;
  box-shadow: 5rpx 5rpx 5rpx 5rpx #E0E3DA;
  background-color: #ffffff;
  margin: 30rpx;
  /* padding使得文字和图片不至于贴着边框 */
  padding: 30rpx;

}

/* 图片 */

.image_1 {
  width: 150rpx;
  height: 100rpx;
}

.image_2 {
  position: relative;
  right: 5px;
  width: 150rpx;
  height: 100rpx;
}

/* 包裹两行文字 */

.view_wenzi2 {
  width: 100%;
  margin-left: 25rpx;
  display: flex;
  flex-direction: column;
}

/* 小字 */

.text_small {
  position: relative;
  display: flex;
  font-size: 30rpx;
  word-break: break-all;
  color: #7a7878;
  margin-top: 10rpx
}

.z_title {
  width: 200px;
  height: 100px;
  margin-left: 25%;
}

.image {
  width: 150rpx;
  height: 120rpx;
  margin-left: 200rpx;
  display: flex;
}