/**index.wxss**/
page{
  height: 100%;
}
.rg{
  float: right;
}
.lf{
  float: left;
}


.items{
  display: flex;
  width: 98%;
  min-height: 100rpx;
  justify-content: flex-start;
  flex-direction:column;

}

.items .item{
  flex-grow:1;
  color: #000;
  padding: 5rpx 30rpx 10rpx 20rpx;
  border-bottom: 1px solid #e6e6e6;
  margin-bottom: 30rpx;
  margin-top:20rpx;
}
.items .item .iconbox{
  display: flex;
  flex-direction:row;
  align-items:center ;
  width:60%;
}
.items .item .iconbox text{
  padding-left: 10rpx;
  font-size: 30rpx;
}
.items .item{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:flex-end;
}
.items .item .operation{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
}
.items .item .operation button{
  padding: 0rpx 18rpx;
  text-align: center;
  font-size: 28rpx;
  margin-right: 20rpx;
  height: 70rpx;
}
.tips{
  margin: 100rpx auto;
  color: #e6e6e6;
  text-align: center;
}

.but{
   background-color: #fb7299;
   color: #fff;
   margin-top: 60%;
   width: 20%;
}